{% extends 'layout.twig' %}

{% block content %}
    <a href="{{ webroot }}profile">В профайл</a>
    <br>
    <br>
    <table border="1">
        {% if photo is not empty %}
            {% for item in photo %}
                <tr>
                    <td align="center" width="50px">{{ loop.index }}</td>
                    <td>
                        <img width="200" src="{{ item }}" alt="">
                    </td>
                    <td align="center"><?=$item;?></td>
                </tr>
            {% endfor %}
        {% else %}
        <p>Пусто - нет файлов</p>
        {% endif %}
    </table>
{% endblock %}